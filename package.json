{
  "name": "music-streamer",
  "type": "module",
  "scripts": {
    "serve": "npm run streamer-server & npm run streamer-player",
    "streamer-server": "node src/streamer-server/index.js",
    "streamer-player": "node src/streamer-player/index.js",
    "generate-ssl": "openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -sha256 -days 3650 -nodes -subj \"/C=XX/ST=StateName/L=CityName/O=CompanyName/OU=CompanySectionName/CN=CommonNameOrHostname\""
  },
  "dependencies": {
    "express": "^5.1.0",
    "puppeteer": "^24.16.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "typescript": "^5.9.2"
  }
}
